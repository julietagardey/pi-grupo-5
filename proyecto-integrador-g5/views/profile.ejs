<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("partials/head.ejs") %>

	<body>
		<!-- Header -->
		<% if (locals.user != undefined) { %>
			<%- include("partials/header-log.ejs") %>
		<% } else { %>
			<%- include('partials/header-logoff.ejs') %>
			<% } %>
			<!-- /Header -->

			<!-- Datos del usuario -->
			<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
						<img src="/images/users/fotoPerfil.jpg" alt="foto de perfil" class="foto-perfil">
					</div>
					<div class="data-container col-6">
						<div class="d-flex align-items-center ">
							<h1 class="main-title">
								<%= usuario.nombre%>
								<!-- Â¡QUE SOLO LO VEA EL USUARIO DEL USUARIO A EDITAR! -->
								<!-- <"% if (locals.user.nombre == usuario.nombre) { %>
										<a href="/users/editProfile">
											<i class="fas fa-cog"></i>
										</a>
								<"%  } %>								 -->
							</h1>
							<a class="btn mt-3 ml-4" href="">SEGUIR</a>
						</div>
						<div>
							<h6 class="email">
								<%= usuario.email %>
							</h6>
							<p class="product-detail-description">
								<a href="/users/editprofile/<%= usuario.id_usuario%>">
									<i class="fas fa-cog"></i>
									Editar Perfil
								</a>
							</p>
						</div>
						<div>
							<ul class="">
								<li><%= usuario.productos.length %> productos</li>
								<li>200 seguidores</li>
								<!-- <li>300 comentarios</li> -->
							</ul>
						</div>
					</div>
				</div>
			</section>
			<!-- /Datos del usuario -->

			<!-- Mis productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Mis productos</h2>
					</div>
					<!-- Show mis productos -->
					<% for( let i=0; i < usuario.productos.length; i++ ) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/detail/<%= usuario.productos[i].id_producto %>">
									<figure class="product-box_image">
										<img src="<%= usuario.productos[i].foto_texto %>" alt="horno">
									</figure>
									<article class="product-box_data">
										<h2>
											<%= usuario.productos[i].nombre %>
										</h2>
										<p>
											<%= usuario.productos[i].descripcion %>
										</p>
										<p>Comentarios: <%= usuario.productos[i].comentarios.length %></p>
									</article>
								</a>
							</section>
						</div>
						<% } %>
				</div>
			</div>
			</div>
			<!-- /Mis productos -->


			<!-- footer -->
			<%- include("partials/footer.ejs") %>
				<!-- /footer -->
	</body>

</html>