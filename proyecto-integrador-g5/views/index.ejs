<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("partials/head.ejs") %>
<body>
	<!-- Header -->
  <%- include("partials/header-logoff.ejs") %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="./product.ejs">
						<figure class="product-box_image">
							<img src="/images/products/pava-electrica.jpeg" alt="pava">
						</figure>
						<article class="product-box_data">
							<h2> <%= productos[0].nombre %> </h2>
							<p> <%= productos[0].descripcion %></p>
							<p>Comentarios: 3</p>
						</article>
					</a>
				</section>
			</div>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="./product.ejs">
						<figure class="product-box_image">
							<img src="images/products/heladera.jpeg" alt="heladera">
						</figure>
						<article class="product-box_data">
							<h2> <%= productos[1].nombre %> </h2>
							<p> <%= productos[1].descripcion %></p>
							<p>Comentarios: 3</p>
						</article>
					</a>
				</section>
			</div>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="./product.ejs">
						<figure class="product-box_image">
							<img src="images/products/tostadora.jpeg" alt="tostadora">
						</figure>
						<article class="product-box_data">
							<h2> <%= productos[2].nombre %> </h2>
							<p> <%= productos[2].descripcion %></p>
							<p>Comentarios: 3</p>
						</article>
					</a>
				</section>
			</div>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="./product.ejs">
						<figure class="product-box_image">
							<img src="images/products/licuadora.jpeg" alt="licuadora">
						</figure>
						<article class="product-box_data">
							<h2> <%= productos[3].nombre %> </h2>
							<p> <%= productos[3].descripcion %></p>
							<p>Comentarios: 3</p>
						</article>
					</a>
				</section>
			</div>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let index = 0; index < 4; index++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/productDetail">
							<figure class="product-box_image">
								<img src="<%= productos[index].imagen %>" alt="horno">
							</figure>
							<article class="product-box_data">
								<h2> <%= productos[index].nombre %> </h2>
								<p> <%= productos[index].descripcion %></p>
								<p>Comentarios: 3</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
	
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
  <%- include("partials/footer.ejs") %>
	<!-- /footer -->
</body>	
</html>